<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sacred System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <header>
        <div class="nav-wrapper">
            <h1>@Html.ActionLink("Sacred System", "Index", "Home", null, new { @class = "navbar-brand" })</h1>
            
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
            
            <div class="nav-login">
                @if (User.Identity.IsAuthenticated)
                {
                    // TODO :: Show logged in information (avatar etc)
                }
                else
                {
                    // Not logged in - show login form
                    <form id="NavLoginForm">
                        <div>
                            <label>Email</label>
                            <input type="text" />
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" />
                        </div>
                        <div>
                            <label>&nbsp;</label>
                            <input type="submit" value="Login" />
                        </div>
                    </form>
                }
            </div>
            <div class="clearfix"></div>
        </div>
    </header>

    @*<div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sacred System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>*@

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <hr />
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Sacred System - 9th Batallion. All rights reserved.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
