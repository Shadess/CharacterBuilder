<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sacred System</title>
    @Styles.Render("~/Content/css")
</head>

<body>
    <header>
        <div class="wide-middle-wrapper">
            <h1>@Html.ActionLink("Sacred", "Index", "Home", null, new { @class = "navbar-brand" })</h1>

            <ul class="nav">
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>

            <div class="nav-login">
                @if (User.Identity.IsAuthenticated)
                {
                    // TODO :: Show logged in information (avatar etc)
                }
                else
                {
                    // Not logged in - show login form
                    <form id="NavLoginForm">
                        <div>
                            <label>Email</label>
                            <input type="text" />
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" />
                        </div>
                        <div>
                            <label>&nbsp;</label>
                            <input type="submit" value="Login" />
                        </div>
                    </form>
                }
            </div>
            <div class="clearfix"></div>
        </div>
    </header>

    <div class="content-wrapper">
        <div class="wide-middle-wrapper">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="wide-middle-wrapper">
            <p>&copy; @DateTime.Now.Year - Sacred System - 9th Batallion. All rights reserved.</p>
        </div>
    </footer>

    @*<div class="content-wrapper">
        <div class="content-container">
            @RenderBody()
        </div>
    </div>

    <footer>
        <hr />
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Sacred System - 9th Batallion. All rights reserved.</p>
        </div>
    </footer>*@

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
